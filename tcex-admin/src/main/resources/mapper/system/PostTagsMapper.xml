<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PostTagsMapper">
    
    <resultMap type="PostTags" id="PostTagsResult">
        <result property="postId"    column="post_id"    />
        <result property="tagId"    column="tag_id"    />
    </resultMap>

    <sql id="selectPostTagsVo">
        select post_id, tag_id from post_tags
    </sql>

    <select id="selectPostTagsList" parameterType="PostTags" resultMap="PostTagsResult">
        <include refid="selectPostTagsVo"/>
        <where>  
        </where>
    </select>
    
    <select id="selectPostTagsByPostId" parameterType="Long" resultMap="PostTagsResult">
        <include refid="selectPostTagsVo"/>
        where post_id = #{postId}
    </select>

    <insert id="insertPostTags" parameterType="PostTags">
        insert into post_tags
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="postId != null">post_id,</if>
            <if test="tagId != null">tag_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="postId != null">#{postId},</if>
            <if test="tagId != null">#{tagId},</if>
         </trim>
    </insert>

    <update id="updatePostTags" parameterType="PostTags">
        update post_tags
        <trim prefix="SET" suffixOverrides=",">
            <if test="tagId != null">tag_id = #{tagId},</if>
        </trim>
        where post_id = #{postId}
    </update>

    <delete id="deletePostTagsByPostId" parameterType="Long">
        delete from post_tags where post_id = #{postId}
    </delete>

    <delete id="deletePostTagsByPostIds" parameterType="String">
        delete from post_tags where post_id in 
        <foreach item="postId" collection="array" open="(" separator="," close=")">
            #{postId}
        </foreach>
    </delete>
</mapper>